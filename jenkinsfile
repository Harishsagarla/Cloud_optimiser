pipeline {
    agent any

    stages {

        stage('Install Dependencies') {
            steps {
                sh 'pip install pandas matplotlib'
            }
        }

        stage('Run Python Script') {
            steps {
                sh 'python3 main.py'
            }
        }
    }

    post {
        success {
            echo 'ğŸ‰ Jenkins Pipeline Success!'
        }
        failure {
            echo 'âŒ Jenkins Pipeline Failed!'
        }
    }
}
